 */
function kreol_campaign_menu() {
  $items['kreol/audio-book/player'] = [
    'page callback' => 'kreol_campaign_audiobook_player',
    'access arguments' => ['access content'],
  ];

  $items['kreol/autocomplete/%'] = [
